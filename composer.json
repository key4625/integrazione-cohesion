{
    "name": "integrazione-cohesion/wordpress-plugin",
    "description": "Plugin WordPress per l'integrazione con il sistema di autenticazione Cohesion della Regione Marche. Supporta SPID, CIE, eIDAS e sistemi di identitÃ  digitale.",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "plugin", 
        "cohesion",
        "spid",
        "cie",
        "eidas",
        "authentication",
        "sso",
        "regione-marche",
        "identita-digitale",
        "saml"
    ],
    "homepage": "https://github.com/your-username/integrazione-cohesion",
    "license": "MIT",
    "authors": [
        {
            "name": "Sistema Cohesion",
            "email": "integrazioneCohesion@regione.marche.it",
            "homepage": "https://cohesion.regione.marche.it",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/your-username/integrazione-cohesion/issues",
        "wiki": "https://github.com/your-username/integrazione-cohesion/wiki",
        "docs": "https://cohesion.regione.marche.it/CohesionDocs/",
        "email": "integrazioneCohesion@regione.marche.it"
    },
    "require": {
        "php": ">=7.4",
        "andreaval/cohesion2-library": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "*",
        "phpcompatibility/phpcompatibility-wp": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "CohesionIntegration\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CohesionIntegration\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=WordPress --extensions=php --ignore=vendor/ .",
        "cbf": "phpcbf --standard=WordPress --extensions=php --ignore=vendor/ .",
        "security": "composer audit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "wordpress-install-dir": "wp-content/plugins/integrazione-cohesion",
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    }
}
